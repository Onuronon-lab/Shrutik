# Application Configuration
APP_NAME=Voice Data Collection Platform
DEBUG=true
VERSION=1.0.0

# Database Configuration
# For local development: localhost:5432
# For Docker: postgres:5432
DATABASE_URL=postgresql://postgres:password@localhost:5432/voice_collection

# Redis Configuration
# For local development: localhost:6379
# For Docker: redis:6379
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Configuration
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:8000"]

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=104857600
ALLOWED_AUDIO_FORMATS=[".wav", ".mp3", ".m4a", ".flac", ".webm"]

# Celery Configuration
USE_CELERY=true

# Audio Processing Configuration
CHUNK_MIN_DURATION=1.0
CHUNK_MAX_DURATION=10.0

# Export Storage Configuration
EXPORT_STORAGE_TYPE=local  # or "r2" for production
EXPORT_LOCAL_DIR=exports

# Cloudflare R2 Configuration (Production Only)
# NEVER commit actual credentials - use secure secret management
R2_ACCOUNT_ID=your_account_id_here
R2_ACCESS_KEY_ID=your_access_key_here
R2_SECRET_ACCESS_KEY=your_secret_key_here
R2_BUCKET_NAME=your_bucket_name
R2_ENDPOINT_URL=https://your_account_id.r2.cloudflarestorage.com

# R2 Free Tier Protection
R2_ENABLE_FREE_TIER_GUARD=true
R2_FREE_TIER_CLASS_A_MONTHLY=1000000
R2_FREE_TIER_CLASS_B_MONTHLY=10000000
R2_FREE_TIER_STORAGE_GB=10

# Export Batch Configuration
EXPORT_BATCH_SIZE=200
EXPORT_SCHEDULE_CRON=0 2 * * *
EXPORT_MIN_CHUNKS_THRESHOLD=200
EXPORT_COMPRESSION_LEVEL=3
EXPORT_MAX_CHUNK_SIZE_MB=50
EXPORT_DAILY_DOWNLOAD_LIMIT=2
