# Production Environment Configuration for Shrutik Voice Collection Platform
# 
# SECURITY WARNING: 
# - Never commit actual production values to version control
# - Use secure secret management for sensitive values
# - Generate strong, unique passwords and keys
#

# Application Configuration
APP_NAME=Shrutik Voice Collection Platform
DEBUG=false
VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://production_user:CHANGE_THIS_PASSWORD@postgres:5432/voice_collection
POSTGRES_DB=voice_collection
POSTGRES_USER=production_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security Configuration
SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_KEY_64_CHARS_MINIMUM
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Configuration - Update with your actual domain
ALLOWED_HOSTS=["https://your-domain.com", "https://www.your-domain.com"]
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# File Storage Configuration
UPLOAD_DIR=/app/uploads
EXPORT_DIR=/app/exports
MAX_FILE_SIZE=104857600
ALLOWED_AUDIO_FORMATS=[".wav", ".mp3", ".m4a", ".flac", ".webm"]

# Celery Configuration
USE_CELERY=true

# Audio Processing Configuration
CHUNK_MIN_DURATION=1.0
CHUNK_MAX_DURATION=10.0

# Export Storage Configuration
EXPORT_STORAGE_TYPE=local  # or "r2" for Cloudflare R2
EXPORT_LOCAL_DIR=/app/exports

# Cloudflare R2 Configuration (Optional - for cloud storage)
# Only set these if using R2 storage
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_ENDPOINT_URL=

# R2 Free Tier Protection
R2_ENABLE_FREE_TIER_GUARD=true
R2_FREE_TIER_CLASS_A_MONTHLY=1000000
R2_FREE_TIER_CLASS_B_MONTHLY=10000000
R2_FREE_TIER_STORAGE_GB=10

# Export Batch Configuration
EXPORT_BATCH_SIZE=200
EXPORT_SCHEDULE_CRON=0 2 * * *
EXPORT_MIN_CHUNKS_THRESHOLD=200
EXPORT_COMPRESSION_LEVEL=3
EXPORT_MAX_CHUNK_SIZE_MB=50
EXPORT_DAILY_DOWNLOAD_LIMIT=2

# Monitoring Configuration
FLOWER_BASIC_AUTH=admin:CHANGE_THIS_PASSWORD

# Domain Configuration (Update with your actual domain)
DOMAIN_NAME=your-domain.com
SSL_EMAIL=admin@your-domain.com