# Docker Environment Configuration
# Use this configuration when running with Docker Compose

# Application Configuration
APP_NAME=Voice Data Collection Platform
DEBUG=true
VERSION=1.0.0

# Database Configuration (Docker)
DATABASE_URL=postgresql://postgres:password@postgres:5432/voice_collection

# Redis Configuration (Docker)
REDIS_URL=redis://redis:6379/0

# Security Configuration
SECRET_KEY=docker-dev-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Configuration
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:8000"]

# File Storage Configuration (Docker paths)
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=104857600
ALLOWED_AUDIO_FORMATS=[".wav", ".mp3", ".m4a", ".flac", ".webm"]

# Celery Configuration
USE_CELERY=true

# Audio Processing Configuration
CHUNK_MIN_DURATION=1.0
CHUNK_MAX_DURATION=10.0