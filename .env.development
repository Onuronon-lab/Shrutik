# Development Environment Configuration
# Copy this to .env for local development

# Application Configuration
APP_NAME=Voice Data Collection Platform
DEBUG=true
VERSION=1.0.0

# Database Configuration (Local Development)
DATABASE_URL=postgresql://postgres:password@localhost:5432/voice_collection

# Redis Configuration (Local Development)
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=dev-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Configuration
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000", "http://127.0.0.1:8000"]

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=104857600
ALLOWED_AUDIO_FORMATS=[".wav", ".mp3", ".m4a", ".flac", ".webm"]

# Celery Configuration
USE_CELERY=true

# Audio Processing Configuration
CHUNK_MIN_DURATION=1.0
CHUNK_MAX_DURATION=10.0